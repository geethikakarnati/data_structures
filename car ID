#include <stdio.h>
struct Car {
int carID;
char carModel[50];
float carRentalRatePerDay;
};
float calRentalCost(struct Car c, int days) {
return c.carRentalRatePerDay * days;
}
int main() {
struct Car car1, car2, car3;
int numOfRentalDays;
printf("Input details for Car 1:\n");
printf("Car ID: ");
scanf("%d", &car1.carID);
printf("Car Model: ");
scanf("%s", car1.carModel);
printf("Car Rental Rate per Day: ");
scanf("%f", &car1.carRentalRatePerDay);
printf("\nInput details for Car 2:\n");
printf("Car ID: ");
scanf("%d", &car2.carID);
printf("Car Model: ");
scanf("%s", car2. carModel);
printf("Car Rental Rate per Day: ");
scanf("%f", &car2. carRentalRatePerDay);
printf("\nInput details for Car 3:\n");
printf("Car ID: ");
scanf("%d", &car3.carID);
printf("Car Model: ");
scanf("%s", car3. carModel);
printf("Car Rental Rate per Day: ");
scanf("%f", &car3. carRentalRatePerDay);
printf("\nEnter the number of rental days: ");
scanf("%d", & numOfRentalDays);
printf("\nTotal Rental Cost for Car 1: %.2f\n", calRentalCost (car1,
numOfRentalDays));
printf("Total Rental Cost for Car 2: %.2f\n", calRentalCost (car2,
numOfRentalDays));
printf("Total Rental Cost for Car 3: %.2f\n", calRentalCost (car3,
numOfRentalDays));
return 0;
}
